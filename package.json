{
    "name": "thrive-launcher",
    "productName": "Thrive Launcher",
    "version": "1.2.1",
    "description": "Thrive Launcher manages downloading Thrive releases",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "start-dev": "electron . --open-dev",
        "start-remote-debug": "electron . --remote-debugging-port=9222",
        "start-remote-debug-dev": "electron . --remote-debugging-port=9222 --open-dev",
        "pack": "electron-builder --dir -p never",
        "dist": "electron-builder -p never",
        "dist:win": "electron-builder --win --x64 --ia32 -p never",
        "deploy": "electron-builder -p onTagOrDraft",
        "deploy:win": "electron-builder --win --x64 --ia32 -p onTagOrDraft",
        "lint": "eslint *.js *.html src/**/*.js && stylelint *.css src/**/*.css",
        "lint-fix": "eslint *.js *.html src/**/*.js --fix && stylelint *.css src/**/*.css --fix"
    },
    "repository": "https://github.com/Revolutionary-Games/Thrive-Launcher",
    "keywords": [
        "Thrive",
        "launcher",
        "installer"
    ],
    "author": {
        "name": "Revolutionary Games",
        "email": "revolutionarygamesstudio@gmail.com",
        "url": "http://revolutionarygamesstudio.com/"
    },
    "license": "MIT",
    "build": {
        "appId": "com.revolutionarygamestudio.thrive-launcher",
        "productName": "Thrive Launcher",
        "copyright": "Copyright Â© 2018-2020 ${author}",
        "files": [
            "*",
            "assets",
            "version_data",
            "jquery-ui-1.12.1/**/*",
            "Roboto/*",
            "!release-builds",
            "tools",
            "src"
        ],
        "asarUnpack": [
            "tools/7zip/*",
            "tools/pck/*"
        ],
        "nsis": {
            "oneClick": "false",
            "allowToChangeInstallationDirectory": "true"
        },
        "electronUpdaterCompatibility": ">= 2.16",
        "publish": [
            {
                "provider": "github",
                "vPrefixedTagName": true
            }
        ],
        "linux": {
            "category": "Game",
            "icon": "assets/icons",
            "target": [
                {
                    "target": "AppImage"
                },
                {
                    "target": "7z"
                },
                {
                    "target": "rpm"
                },
                {
                    "target": "deb"
                }
            ]
        },
        "win": {
            "icon": "assets/icons/icon.ico",
            "target": [
                {
                    "target": "nsis"
                },
                {
                    "target": "7z"
                },
                {
                    "target": "portable"
                }
            ]
        }
    },
    "devDependencies": {
        "electron": "^8.4.0",
        "electron-builder": "^22.7.0",
        "eslint": "^6.8.0",
        "eslint-plugin-html": "^6.0.2",
        "stylelint": "^13.6.1"
    },
    "dependencies": {
        "du": "^1.0.0",
        "electron-log": "^4.2.2",
        "electron-updater": "^4.3.1",
        "feedparser": "^2.2.10",
        "fs-extra": "^9.0.1",
        "jquery": "^3.5.1",
        "js-sha3": "^0.8.0",
        "mkdirp": "^1.0.4",
        "moment": "^2.27.0",
        "openpgp": "^4.10.4",
        "request": "^2.88.2",
        "rimraf": "^3.0.2",
        "semver": "^7.3.2",
        "strip-json-comments": "^3.1.0",
        "systeminformation": "^4.26.9"
    },
    "postinstall": "electron-builder install-app-deps"
}
