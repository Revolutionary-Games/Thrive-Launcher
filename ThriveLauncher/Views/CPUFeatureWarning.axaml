<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i18n="clr-namespace:ThriveLauncher.Services.Localization"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ThriveLauncher.Views.CPUFeatureWarning"
        Width="500" Height="400"
        MinWidth="300" MinHeight="200"
        Icon="/Assets/Icons/icon.ico"
        Title="{i18n:Localize CPUFeatureWarningTitle}"
        FontFamily="{StaticResource Lato}"
        Background="{DynamicResource MainWindowBackground}"
        FontSize="15">

    <DockPanel LastChildFill="True" Margin="0 3">
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Center" Click="ClickClose"
                Classes="DialogButton" Content="{i18n:Localize DialogOk}" />

        <ScrollViewer>
            <TextBlock Margin="5 0" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                       Text="{i18n:Localize CPUFeatureWarning}" />
        </ScrollViewer>
    </DockPanel>

</Window>
